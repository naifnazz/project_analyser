<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:background="@color/darkgunmental"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/defaultscan"

                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/frontscan"
                app:tint="#F8F3F8"/>

            <ImageView
                android:id="@+id/backscan"

                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/backscan"
                app:tint="#F8F3F8" />

            <ImageView
                android:id="@+id/frontscan"

                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/downscan"
                app:tint="#F8F3F8" />

            <ImageView
                android:id="@+id/downscan"

                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/topscan"
                app:tint="#F8F3F8"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
