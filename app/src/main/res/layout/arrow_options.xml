<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:background="@color/darkgunmental"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/default_arrow"

                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/baseline_arrow_right_alt_24" />

            <ImageView
                android:id="@+id/curved_arrow"

                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/curvedicon"
                app:tint="#F8F3F8" />

            <ImageView
                android:id="@+id/dash_arrow"

                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/dashedicon"
                app:tint="#F8F3F8" />

            <ImageView
                android:id="@+id/zigzag_arrow"

                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/zigzagicon"
                app:tint="#F8F3F8" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
