        android:layout_marginStart="48dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="48dp"
        android:src="@drawable/ad1"
        android:scaleType="fitXY" />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
